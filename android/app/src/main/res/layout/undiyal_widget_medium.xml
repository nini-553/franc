<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- OUTCOME Section (Dark) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="12dp"
        android:layout_marginBottom="4dp">

        <!-- OUTCOME Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUTCOME"
            android:textColor="#888888"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <!-- Spent and Budget Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Spent Amount -->
            <TextView
                android:id="@+id/widget_spent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="177 $"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Budget Amount -->
            <TextView
                android:id="@+id/widget_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000 $"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/widget_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="30"
            android:progressTint="#00FF88"
            android:progressBackgroundTint="#333333"
            android:indeterminate="false" />
    </LinearLayout>

    <!-- FAB Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-24dp"
        android:layout_marginBottom="-24dp">

        <ImageButton
            android:id="@+id/widget_add_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/fab_background"
            android:src="@drawable/ic_add"
            android:scaleType="center"
            android:contentDescription="Add expense"
            android:elevation="4dp" />
    </FrameLayout>

    <!-- LAST Section (Green) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#00FF88"
        android:padding="12dp"
        android:layout_marginTop="4dp">

        <!-- LAST Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST"
            android:textColor="#000000"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="4dp" />

        <!-- Last Transaction Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Category Icon -->
            <TextView
                android:id="@+id/widget_last_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="ðŸ›’"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/icon_background"
                android:layout_marginEnd="8dp" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/widget_last_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shop"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Amount -->
            <TextView
                android:id="@+id/widget_last_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 122 $"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
