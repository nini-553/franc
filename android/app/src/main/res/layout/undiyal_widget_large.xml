<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- OUTCOME Section (Dark) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="16dp"
        android:layout_marginBottom="4dp">

        <!-- OUTCOME Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUTCOME"
            android:textColor="#888888"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- Spent and Budget Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPENT"
                    android:textColor="#666666"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/widget_spent_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="177 $"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUDGET"
                    android:textColor="#666666"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/widget_budget_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000 $"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Percentage Text -->
        <TextView
            android:id="@+id/widget_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6% used"
            android:textColor="#888888"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/widget_progress_large"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="30"
            android:progressTint="#00FF88"
            android:progressBackgroundTint="#333333"
            android:indeterminate="false"
            android:layout_marginBottom="8dp" />

        <!-- Remaining Amount -->
        <TextView
            android:id="@+id/widget_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2823 $ remaining"
            android:textColor="#00FF88"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- FAB Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-28dp"
        android:layout_marginBottom="-28dp">

        <ImageButton
            android:id="@+id/widget_add_button_large"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/fab_background_large"
            android:src="@drawable/ic_add"
            android:scaleType="center"
            android:contentDescription="Add expense"
            android:elevation="6dp" />
    </FrameLayout>

    <!-- LAST Section (Green) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#00FF88"
        android:padding="16dp"
        android:layout_marginTop="4dp">

        <!-- LAST Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST EXPENSE"
            android:textColor="#000000"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <!-- Last Transaction Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Category Icon -->
            <TextView
                android:id="@+id/widget_last_icon_large"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ›’"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@drawable/icon_background_large"
                android:layout_marginEnd="12dp" />

            <!-- Category Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_last_category_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/widget_last_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today, 2:30 PM"
                    android:textColor="#333333"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Amount -->
            <TextView
                android:id="@+id/widget_last_amount_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 122 $"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
